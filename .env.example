# Prediction Market Arbitrage System - Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control - it contains secrets!

# =============================================================================
# POLYMARKET CONFIGURATION
# =============================================================================
# Private key for Polymarket wallet (Ethereum-style hex string with 0x prefix)
# Obtain from: Your Ethereum wallet (MetaMask, hardware wallet, etc.)
POLYMARKET_PRIVATE_KEY="0xYOUR_PRIVATE_KEY_HERE"

# =============================================================================
# KALSHI CONFIGURATION
# =============================================================================
# Kalshi API Key (UUID format)
# Obtain from: https://kalshi.com/account/api-keys (or https://demo.kalshi.com/)
KALSHI_API_KEY="YOUR_KALSHI_API_KEY_HERE"

# Path to file containing your Kalshi private key (PEM format)
# Store the private key in a secure location (should be .pem or .key file)
# Example: /Users/yourname/secrets/kalshi_private_key.pem
KALSHI_PRIVATE_KEY_PATH="/path/to/kalshi_private_key.pem"

# Kalshi Environment
KALSHI_ENVIRONMENT=demo  # or "production"

# API Configuration (usually auto-configured based on environment)
KALSHI_BASE_URL=https://demo-api.kalshi.co  # or https://trading-api.kalshi.com for prod
KALSHI_API_VERSION=v2

